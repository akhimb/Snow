                        </ComboBox.Resources>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Rectangle  Margin="2,2" Width="20" Height="20" Fill="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Rectangle  Margin="2,2,0,0" Grid.Row="6" Grid.Column="2" Width="15" Height="15" Stroke="Black" StrokeThickness="1" Fill="{Binding Path=SelectedValue,ElementName=ColorsCombo}"/>


                    <TextBlock  Grid.Row="7" Grid.Column="0"><Run Text="New Profile Name : "/></TextBlock>
                    <TextBox Grid.Row="7" Grid.Column="1" x:Name="ProfileNameTextBox" Text="{Binding ProfileName,Mode=TwoWay}" MaxLength="10" />

                    <DockPanel x:Name="Buttons" Grid.Row="8"  Grid.Column="0"  Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
