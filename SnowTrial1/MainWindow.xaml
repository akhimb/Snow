                    <TextBlock  Grid.Row="2" Grid.Column="0"><Run Text="Number of Columns :"/></TextBlock>
                    <Slider x:Name="ColumnsSlider"  Grid.Row="2" Grid.Column="1"
                            Value="{Binding NumberOfColumns, Mode=TwoWay}"
                            Minimum="2"
                            Maximum="20"  />
                    <TextBlock Grid.Column="2" Grid.Row="2" Text="{Binding Value, ElementName=ColumnsSlider}"/>


                    <TextBlock Grid.Row="3" Grid.Column="0"><Run Text="Opacity Value:"/></TextBlock>
                    <Slider  x:Name="OpacitySlider" Grid.Row="3" Grid.Column="1"
