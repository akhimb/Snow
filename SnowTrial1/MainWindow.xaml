                            <DockPanel>
                                <Image Height="20" Width="20" Source="C:\Users\Totto\source\repos\SnowTrial1\SnowTrial1\Resources\reset.png"/>
                                <TextBlock Margin="2" Text="Reset" Foreground="White"/>
                            </DockPanel>
                        </Button>
                        <Button Width="100"  Margin="5 0 5 0"  Background="Black"  x:Name="UpdateButton" Click="UpdateButton_Click">
                            <DockPanel>
